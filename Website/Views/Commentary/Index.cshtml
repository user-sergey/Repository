@model IList<Web.Entities.Commentary>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3"> 
    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-outline-primary">Commentary List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Commentary" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create new commentary
                
            </a>
        </div>
    </div>
    <br /><br />
<table class="table table-bordered table-dark table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Content
            </th>
            <th>
                userId
            </th>
            <th>
                newsId
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var commentary in Model)
        {
            <tr>
                <td width="20%">
                    @commentary.Id
                </td>
                 <td width="10%">
                    @commentary.Content
                </td>
                 <td width="10%">
                    @commentary.userId
                </td>
                 <td width="10%">
                    @commentary.newsId
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
